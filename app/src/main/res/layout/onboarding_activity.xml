<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.onboarding.OnboardingActivity">
    <Button
            android:text="Let me in"
            android:textColor="#E990F9"
            android:layout_width="151dip"
            android:layout_height="60dip"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button"
            android:background="@drawable/let_me_in_button"
            android:textStyle="italic"
            android:layout_marginTop="103dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/bearface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="150dp"/>
    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="77dip"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/toolbar" app:layout_constraintTop_toTopOf="parent">
        <ImageView
                android:src="@drawable/logo"
                android:layout_marginLeft="35dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:ignore="MissingConstraints"/>

    </android.support.v7.widget.Toolbar>
</android.support.constraint.ConstraintLayout>
